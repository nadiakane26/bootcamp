<p style="color: green"><%= notice %></p>

<h1><%= @author.name %></h1>
<p><%= @author.bio %></p>

<h2>Articles by <%= @author.name %>:</h2>
<% if @articles.any? %>
  <ul>
    <% @articles.each do |article| %>
      <li><%= link_to article.title, article_path(article) %></li>
    <% end %>
  </ul>
<% else %>
  <p>This author has not written any articles yet.</p>
<% end %>

<div>
  <%= link_to "Edit this author", edit_author_path(@author) %> |
  <%= link_to "Back to authors", authors_path %> |
  <%= button_to "Delete this author", @author, method: :delete, data: { confirm: "Are you sure?" } %>
</div>
