<%= form_with model: article do |form| %>
    <div>
      <%= form.label :title %><br>
      <%= form.text_field :title %>
      <% article.errors.full_messages_for(:title).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  
    <div>
      <%= form.label :body %><br>
      <%= form.textarea :body %><br>
      <% article.errors.full_messages_for(:body).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
    <div>
  <%= form.label :category_id, "Category" %><br>
  <%= form.collection_select :category_id, Category.all, :id, :name, prompt: "Select a category" %>
</div>

<div>
  <%= form.label :author_id, "Author" %><br>
  <%= form.collection_select :author_id, Author.all, :id, :name, prompt: "Select an author" %>
</div>

    <div>
      <%= form.submit %>
    </div>
    <div>
      <%= form.label :status %><br>
      <%= form.select :status, Visible::VALID_STATUSES, selected: article.status || 'public' %>
</div>

  <% end %>
  