<%= form_with(model: article) do |form| %>
  
  <!-- Article Title -->
  <div class="mb-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
    <% article.errors.full_messages_for(:title).each do |message| %>
      <div class="text-danger"><%= message %></div>
    <% end %>
  </div>

  <!-- Body -->
  <div class="mb-3">
    <%= form.label :body, class: "form-label" %>
    <%= form.text_area :body, class: "form-control", rows: 5 %>
    <% article.errors.full_messages_for(:body).each do |message| %>
      <div class="text-danger"><%= message %></div>
    <% end %>
  </div>

  <!-- Category -->
  <div class="mb-3">
    <%= form.label :category_id, "Category", class: "form-label" %>
    <%= form.collection_select :category_id, Category.all, :id, :name, { prompt: "Select a category" }, class: "form-select" %>
  </div>

  <!-- Author -->
  <div class="mb-3">
    <%= form.label :author_id, "Author", class: "form-label" %>
    <%= form.collection_select :author_id, Author.all, :id, :name, { prompt: "Select an author" }, class: "form-select" %>
  </div>

  <!-- Google Maps Autocomplete -->
  <div class="mb-3">
    <%= form.label :location, "Location", class: "form-label" %>
    <%= form.text_field :location, id: "autocomplete", class: "form-control", placeholder: "Enter a place" %>
  </div>

  <!-- Submit -->
  <div class="mb-3"> 
  <% if @article.new_record? %>
<%= form.submit "Create Article", class: "btn btn-primary"  %>
<% else %>
<%= form.submit "Update Article" ,class: "btn btn-primary"  %>
<% end %>

<% end %>
