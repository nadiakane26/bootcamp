
  <div class="card mb-3">
    <div class="card-body">
      <!-- Commenter Name -->
      <h5 class="card-title">
        <%= comment.commenter %>
        <i class="fas fa-clock fa-xs text-muted"></i> 
        <!-- Display comment creation time -->
        <small class="text-muted ml-1">
          <%= time_ago_in_words(comment.created_at) %> ago
        </small>
      </h5>

      <!-- Comment Body -->
      <p class="card-text">
        <%= comment.body %>
      </p>

      <!-- Button Container -->
      <div class="button-container d-flex align-items-center">
        <!-- Delete Button -->
        <%= button_to "Delete", article_comment_path(@article, comment), method: :delete, class: "btn btn-danger btn-sm me-2" %>
        
        <!-- Like Button -->
      <%= button_to 'Like', like_article_comment_path(@article, comment), method: :put, remote: true, class: "btn btn-primary btn-sm like-btn me-2", id: "like-btn-#{comment.id}" %>

      <!-- Like Count -->
      <span class="like-count me-1" id="like-count-<%= comment.id %>">
        <%= comment.get_upvotes.size %>
      </span>
      <span>Likes</span>
      </div>
    </div>
  </div>

